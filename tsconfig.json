{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "removeComments": true,
    "strictNullChecks": false,
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": ["src/**/*", "samples/*.ts"],
  "exclude": ["node_modules"]
}
