{
  "name": "@bithomp/xrpl-api",
  "version": "3.1.0",
  "description": "A Bithomp JavaScript/TypeScript library for interacting with the XRP Ledger",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Bithomp AB",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bithomp/xrpl-api.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "xrpl",
    "rippled",
